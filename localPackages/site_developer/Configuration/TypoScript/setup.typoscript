@import 'EXT:fluid_styled_content/Configuration/TypoScript/setup.typoscript'

page = PAGE
page {
    includeCSS {
        bootstrap = EXT:site_developer/Resources/Public/Css/bootstrap.min.css
        custom = EXT:site_developer/Resources/Public/Css/custom.css
    }

    meta {
        viewport = width=device-width, initial-scale=1
    }

    10 = FLUIDTEMPLATE
    10 {
        templateName = Default

        layoutRootPaths {
            10 = EXT:site_developer/Resources/Private/Layouts/Page/
        }

        partialRootPaths {
            10 = EXT:site_developer/Resources/Private/Partials/Page/
        }

        templateRootPaths {
            10 = EXT:site_developer/Resources/Private/Templates/Page/
        }

        dataProcessing {
            10 = TYPO3\CMS\Frontend\DataProcessing\MenuProcessor
            10 {
                special = list
                special.value = 1
                levels = 2
            }
        }

        variables {
            content =< styles.content.get
        }
    }
}

